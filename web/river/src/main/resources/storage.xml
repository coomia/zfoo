<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:storage="http://www.zfoo.com/schema/storage"

       xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd

    http://www.zfoo.com/schema/storage
    http://www.zfoo.com/schema/storage-1.0.xsd">


    <storage:storage id="storageManager">
        <storage:scan package="com.zfoo.web.river.**.storage"/>
        <storage:resource location="resource" suffix="xls"/>
    </storage:storage>

</beans>
